@using BudgetTool.Enums;
@model BudgetTool.Models.Calculator

<h1>Loan Calculator Repayment</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoanBalance" class="control-label"></label>
                <input asp-for="LoanBalance" class="form-control" />
                <span asp-validation-for="LoanBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MonthlyPayment" class="control-label"></label>
                <textarea rows="2" asp-for="MonthlyPayment" class="form-control"></textarea>
                <span asp-validation-for="MonthlyPayment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InterestRate" class="control-label"></label>
                <input asp-for="InterestRate" class="form-control" />
                <span asp-validation-for="InterestRate" class="text-danger"></span>
            </div>                                       
            <div class=" col-md-6">
                <div>
                    <label asp-for="RepaymentOption">Payment Options</label>
                </div>
                @foreach (var c in System.Enum.GetValues(typeof(RepaymentFrequency)))
                {
                    <label class="radio-inline margin-rightt-ten margin-leftt-five margin-top-none">
                        @(Html.RadioButtonFor<RepaymentFrequency>(m => m.RepaymentOption, (RepaymentFrequency)c, null))
                        @c
                    </label>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Calculate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

